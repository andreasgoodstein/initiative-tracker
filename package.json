{
  "name": "initiative-tracker",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/andreasgoodstein/initiative-tracker",
  "author": "Andreas Goodstein <andreasgoodstein@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html --hmr-port 30000",
    "build": "parcel build src/index.html --out-dir dist --public-url https://andreasgoodstein.github.io/initiative-tracker/",
    "lint": "npm-run-all -p lint:es lint:prettier lint:style",
    "lint:es": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:prettier": "prettier -c .",
    "lint:style": "stylelint **/*.less",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm-run-all -p build test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier -c"
    ],
    "*.less": "stylelint"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.2.1",
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.21",
    "@types/react-dom": "^16.9.5",
    "@types/throttle-debounce": "^2.1.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-transform-stub": "^2.0.0",
    "less": "^3.11.1",
    "lint-staged": "^10.2.9",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.0",
    "stylelint-config-standard": "^20.0.0",
    "ts-jest": "^26.1.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "uuid": "^8.1.0"
  }
}
